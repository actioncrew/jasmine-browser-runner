{
  "name": "@actioncrew/ts-test-runner",
  "version": "1.0.8",
  "description": "Serve and run your Jasmine specs in a browser",
  "bin": {
    "ts-test-runner": "bin/ts-test-runner"
  },
  "files": [
    "LICENSE",
    "MIT.LICENSE",
    "README.md",
    "package.json",
    "bin/"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && vite build && node build-package.js && npm run copyfiles",
