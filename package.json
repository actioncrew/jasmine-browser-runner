    "copyfiles": "copyfiles README.md LICENSE ./dist/ts-test-runner"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actioncrew/ts-test-runner.git"
  },
  "keywords": [
    "jasmine",
    "testing",
    "tdd"
  ],
  "author": "Slackersoft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/actioncrew/ts-test-runner/issues"
  },
  "homepage": "https://github.com/actioncrew/ts-test-runner#readme",
  "peerDependencies": {
    "esbuild": "^0.25.9",
    "playwright": "^1.55.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@types/express": "^5.0.3",
    "@types/jasmine": "^5.1.9",
    "@types/glob": "^9.0.0",
    "@types/ws": "^8.18.1",
    "chromium-bidi": "^9.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.35.0",
    "eslint-plugin-jasmine": "^4.2.2",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "jasmine": "^5.10.0",
    "jasmine-core": "^5.10.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup-plugin-copy": "^3.5.0",
    "selenium-webdriver": "^4.35.0",
